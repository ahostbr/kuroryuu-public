# Kuroryuu Docker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Chat Functionality
# =============================================================================

# Anthropic API key for Claude chat
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# OPTIONAL - Override Defaults
# =============================================================================

# Gateway settings
# KURORYUU_GATEWAY_PORT=8200
# KURORYUU_GATEWAY_HOST=0.0.0.0

# MCP Core settings
# KURORYUU_MCP_PORT=8100
# KURORYUU_MCP_HOST=0.0.0.0

# Authentication (recommended for production)
# KURORYUU_AUTH_ENABLED=true
# KURORYUU_AUTH_USERNAME=admin
# Generate hash: python -c "import hashlib; print(hashlib.sha256(b'your-password').hexdigest())"
# KURORYUU_AUTH_PASSWORD_HASH=

# CORS (for production, restrict to your domain)
# KURORYUU_CORS_ORIGINS=https://yourdomain.com

# Claude model selection
# KURORYUU_CLAUDE_MODEL=claude-sonnet-4-20250514
