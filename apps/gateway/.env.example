# === Kuroryuu Gateway Configuration ===
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control (contains secrets)

# ─────────────────────────────────────────────────────────────
# SERVER
# ─────────────────────────────────────────────────────────────
# Bind address (use 0.0.0.0 for external access)
KURORYUU_GATEWAY_HOST=127.0.0.1

# Server port
KURORYUU_GATEWAY_PORT=8200

# ─────────────────────────────────────────────────────────────
# AUTHENTICATION (Web UI only - API endpoints are unprotected)
# ─────────────────────────────────────────────────────────────
# Enable/disable authentication
KURORYUU_AUTH_ENABLED=true

# Login username
KURORYUU_AUTH_USERNAME=Guest

# Password hash (SHA256)
# Generate: python -c "import hashlib; print(hashlib.sha256(b'your-password').hexdigest())"
# Leave empty to use default development password
KURORYUU_AUTH_PASSWORD_HASH=

# Session cookie TTL in days
KURORYUU_SESSION_TTL_DAYS=7

# ─────────────────────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────────────────────
# Allowed origins (comma-separated, or * for all)
# Examples:
#   KURORYUU_CORS_ORIGINS=*
#   KURORYUU_CORS_ORIGINS=http://localhost:3000,https://myapp.com
KURORYUU_CORS_ORIGINS=*

# ─────────────────────────────────────────────────────────────
# EXTERNAL ACCESS (Cloudflare Tunnel)
# ─────────────────────────────────────────────────────────────
# Public domain when using Cloudflare Tunnel
KURORYUU_PUBLIC_DOMAIN=

# Allow external (non-localhost) connections
# When false (default): External IPs are auto-blocked + alert triggered
# When true: External IPs are logged but not blocked
KURORYUU_ALLOW_EXTERNAL=false

# ─────────────────────────────────────────────────────────────
# MCP SERVER
# ─────────────────────────────────────────────────────────────
# MCP Core server URL (used by Gateway, MCP client, and PTY client)
KURORYUU_MCP_URL=http://127.0.0.1:8100

# ─────────────────────────────────────────────────────────────
# TUNNEL PROXY
# ─────────────────────────────────────────────────────────────
# Proxy port (sits between Cloudflare and Gateway, shows maintenance page if Gateway down)
KURORYUU_PROXY_PORT=8199
